{
    "manifest_version": 3,
    "name": "Frankie",
    "description": "OpenAI based virtual assistant",
    "version": "1.0",
    "content_scripts": [
      {
        "js": [
          "content_script.js"
        ],
        "matches": [
          "https://www.google.com/*"
        ]
      }
    ],
    "host_permissions": [
      "https://api.openai.com/v1/completions"
    ],
    "permissions": [
      "storage",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html"
  }